@model AddCarViewModel
<h1>Add Car</h1>


<form asp-action="Add" method="post">
<div class="mt-3">
    <label class="form-label">Brand</label>
    <input type="text" class="form-control" asp-for="Brand" />
</div>

<div class="mt-3">
    <label class="form-label">Model</label>
    <input type="text" class="form-control" asp-for="Model" />
</div>

<div class="mt-3">
    <label class="form-label">Year</label>
    <input type="text" class="form-control" asp-for="Year"/>
</div>

<div class="mt-3">
    <label class="form-label">Horsepower</label>
    <input type="text" class="form-control" asp-for="Horsepower"/>
</div>

<div class="mt-3">
    <label class="form-label">Price</label>
    <input type="text" class="form-control" asp-for="Price"/>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>

</form>